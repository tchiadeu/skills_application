<div class="mt-8 flow-root w-full">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <div class="overflow-hidden shadow-sm ring-1 ring-black/5 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
              <%# Front / Back / DB... %>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Library</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @skills.each do |skill| %>
              <tr class="group cursor-pointer">
                <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-gray-900 sm:pl-6 group-hover:bg-gray-50">
                  <%= link_to skill.first.capitalize, skills_path %>
                </td>
                <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 group-hover:bg-gray-50">
                  <%= link_to skill.second["description"], skills_path %>
                </td>
                <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 group-hover:bg-gray-50">
                  <%= link_to skills_path do %>
                    <%= category_badge(skill.second["category"]) %>
                  <% end %>
                </td>
                <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 group-hover:bg-gray-50">
                  <%= link_to skills_path do %>
                    <%= library_badge(skill.second["library"]) %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
